{
  "name": "event-sync",
  "author": "@mrloh",
  "license": "MIT",
  "version": "0.1.0",
  "description": "offline first distributed event sourcing library",
  "source": "index.ts",
  "react-native": "index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage && open ./.github/test-results/coverage/index.html",
    "gen:coverage-badge": "jest --coverage && coverage-badges --source .github/test-results/coverage-summary.json --output .github/test-results/coverage-badge.svg"
  },
  "devDependencies": {
    "@babel/runtime": "^7.25.7",
    "@types/jest": "^29.5.13",
    "coverage-badges-cli": "^1.2.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "zod": "3.22.2"
  },
  "peerDependencies": {
    "rxjs": "^7.8.1",
    "zod": "^3.22.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": ".github/test-results",
          "outputName": "jest-results.xml"
        }
      ]
    ],
    "coverageReporters": [
      "text",
      "json-summary",
      [
        "html-spa",
        {
          "subdir": "coverage"
        }
      ]
    ],
    "coverageDirectory": ".github/test-results"
  },
  "jest-junit": {
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "engines": {
    "node": "^18.15.0"
  }
}
